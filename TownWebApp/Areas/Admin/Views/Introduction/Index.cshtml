@using TownWebApp.Models
@model IntroductionIndexVM
@{
    int count = 1;
}
<div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Introduction</h4>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <a asp-action="Create"><button class="btn btn-success" type="submit">Create</button></a>
                <h3 class="box-title">Basic Table</h3>
                <p class="text-muted">Add class <code>.table</code></p>
                <div class="table-responsive">
                    <table class="table text-nowrap">
                        <thead>
                            <tr>
                                <th class="border-top-0">#</th>
                                <th class="border-top-0">IconName</th>
                                <th class="border-top-0">Title</th>
                                <th class="border-top-0">Description</th>
                                <th class="border-top-0">Setting</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Introduction item in Model.Introductions)
                            {
                                <tr>
                                    <td>1</td>
                                    <td>@item.IconName</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id"><button class="btn btn-info" type="submit">Detail</button></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn-primary" type="submit">Edit</button></a>
                                        <form asp-action="Delete" asp-route-id="@item.Id">
                                            <button class="btn btn-danger" type="submit">Delete</button>
                                        </form>
                                      
                                    </td>
                                </tr>
                                @(count++);
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Right sidebar -->
    <!-- ============================================================== -->
    <!-- .right-sidebar -->
    <!-- ============================================================== -->
    <!-- End Right sidebar -->
    <!-- ============================================================== -->
</div>
